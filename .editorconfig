root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[{setup,update-roles,install.sh}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
max_line_length = 80

[{*.yml,*.yaml,.ansible-lint,.yamllint}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

# VS Code config files
[.vscode/*.json]
indent_style = space
indent_size = 4
